@model Handled.Models.ViewModels.BicyclePhotoUploadViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bicycle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bicycle.BicycleId" />
            <div class="form-group">
                <label asp-for="Bicycle.VIN" class="control-label"></label>
                <input asp-for="Bicycle.VIN" class="form-control" />
                <span asp-validation-for="Bicycle.VIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bicycle.Make" class="control-label"></label>
                <input asp-for="Bicycle.Make" class="form-control" />
                <span asp-validation-for="Bicycle.Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bicycle.Model" class="control-label"></label>
                <input asp-for="Bicycle.Model" class="form-control" />
                <span asp-validation-for="Bicycle.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bicycle.Color" class="control-label"></label>
                <input asp-for="Bicycle.Color" class="form-control" />
                <span asp-validation-for="Bicycle.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bicycle.ManufactureYear" class="control-label"></label>
                <input asp-for="Bicycle.ManufactureYear" class="form-control" />
                <span asp-validation-for="Bicycle.ManufactureYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Bicycle.CyclistId" class="control-label"></label>
                <input asp-for="Bicycle.CyclistId" class="form-control" asp-items="ViewBag.CyclistId">
                <span asp-validation-for="Bicycle.CyclistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
