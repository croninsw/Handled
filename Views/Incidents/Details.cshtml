@model Handled.Models.Incident

@{
    ViewData["Title"] = "Details";
}

<h2>Incident details:</h2>

<div>
    <hr />
    <dl class="row">
        @* Info on bicycle *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BicycleRider.Bicycle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BicycleRider.Bicycle.Make)
        </dd>
        @* Info on Driver *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarDriver.Driver.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarDriver.Driver.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarDriver.Driver.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarDriver.Driver.LastName)
        </dd>
        @* Info on Driver Contact *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarDriver.Driver.InsuranceCompany)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarDriver.Driver.InsuranceCompany)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarDriver.Driver.InsurancePolicyNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarDriver.Driver.InsurancePolicyNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IncidentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IncidentDate)
        </dd>
    </dl>
    <img src="~/images/@Model.ImagePath" class="incidentDetailImage" />
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IncidentId">Edit</a> |
    <a asp-action="Index">Back to Incidents</a>
</div>
