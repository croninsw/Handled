@model Handled.Models.ViewModels.IncidentPhotoUploadViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit incident information:</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Incident.IncidentId" />
            <div class="form-group">
                <label asp-for="Incident.BicycleRiderId" class="control-label"></label>
                <select asp-for="Incident.BicycleRiderId" class="form-control" asp-items="ViewBag.BicycleRiderId"></select>
                <span asp-validation-for="Incident.BicycleRiderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Incident.CarDriverId" class="control-label"></label>
                <select asp-for="Incident.CarDriverId" class="form-control" asp-items="ViewBag.CarDriverId"></select>
                <span asp-validation-for="Incident.CarDriverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Incident.IncidentDate" class="control-label"></label>
                <input asp-for="Incident.IncidentDate" class="form-control" />
                <span asp-validation-for="Incident.IncidentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
